{
  "name": "electron-countdown",
  "productName": "Countdown",
  "author": "Steven Weissheimer",
	"license": "MIT",
  "homepage": ".",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "electron": "^11.0.4",
    "electron-reload": "^1.5.0",
    "jquery": "^3.5.1"
  },
  "main": "main.js",
  "scripts": {
    "start": "",
    "start-electron-dev": "electron .",
    "build:exe": "electron-packager ./ Countdown --platform=win32 --arch=ia32 --overwrite",
		"pack:osx": "electron-packager . Countdown-Tool --out=dist/osx --platform=darwin --arch=x64 --icon=assets/build/osx/icon.icns && npm run codesign --overwrite",
		"pack:win32": "electron-packager . Countdown-Tool --out=dist/win --platform=win32 --arch=ia32 --overwrite",
		"pack:win64": "electron-packager . Countdown-Tool --out=dist/win --platform=win32 --arch=x64 --app-version=0.36.2 app-version=1.0 --icon=images/icons/win/icon.ico --overwrite",
		"build": "npm run pack:win64"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
